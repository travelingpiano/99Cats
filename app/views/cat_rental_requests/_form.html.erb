<% if action == :edit %>
  <% action_url = cat_rental_request_url(rental) %>
<% else %>
  <% action_url = cat_rental_requests_url %>
<% end %>

<form action = "<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <label for="cat_id">Cat ID</label>
  <input type="integer" name="cat_rental_request[cat_id]" value="<%=rental.cat_id%>">
  <br>

  <label for="start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" value="<%=rental.start_date%>">
  <br>

  <label for="end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" value="<%=rental.end_date%>">
  <br>

  <label for="status">Status</label>
  <input type="radio" name="cat_rental_request[status]" value="PENDING" <%= rental.status == "PENDING" ? "checked" : "" %>>PENDING</input>
  <input type="radio" name="cat_rental_request[status]" value="APPROVED" <%= rental.status == "APPROVED" ? "checked" : "" %>>APPROVED</input>
  <input type="radio" name="cat_rental_request[status]" value="DENIED" <%= rental.status == "DENIED" ? "checked" : "" %>>DENIED</input>
  <br>



  <input type="submit"value="Submit">



</form>
